<% layout('layouts/boilerplate')%>
<div id="cluster-map" class="mt-4"></div>
<div class="container">
    <h1>Search and view our Tours</h1>

    <% for (let tour of tours){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(tour.images.length) {%>
                <img class="img-fluid" alt="" src="<%=tour.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= tour.title %> </h5>

                    <p class="card-text"><%= tour.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= tour.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/tours/<%=tour._id%>">View <%=tour.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const tours = { features: <%- JSON.stringify(tours) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>