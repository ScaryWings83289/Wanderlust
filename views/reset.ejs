<% layout('layouts/boilerplate')%>

<section class="login-section">
    <div class="container-fluid login">
        <div class="user singinBx">
            <div class="imgBx">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80" alt="1">
            </div>
            
            <div class="formBx">
                <form action="/reset/<%= token %>" method="POST" novalidate>
                    <header><span class="fa fa-users"></span></header>
                    <h2>Reset Password</h2>
                    <input type="password" name="password" placeholder="Enter new password" required> 
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <input type="password" name="confirm" placeholder="Confirm your password" required> 
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <button>Update Password</button>
                </form>
            </div>
        </div>
    </div>
</section>