<% layout('layouts/boilerplate')%>

<section>
    <div class="container-fluid">
        <div class="user singinBx">
            <div class="imgBx">
                <img src="https://images.unsplash.com/photo-1537905569824-f89f14cceb68?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8Y2FtcGluZ3xlbnwwfHwwfA%3D%3D&auto=format&fit=crop&w=1000&q=600" alt="1">
            </div>
            <div class="formBx">
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <h2>Sign In</h2>
                    <input type="text" name="username" placeholder="Username" autofocus required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <input type="password" name="password" placeholder="Password" required> 
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <button>Sign In</button>
                    <p class="forgot"><a href="/forgot">Forgot your password</a></p>
                    <p class="signup">Don't have an account ? <a href="/register">Sign Up.</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
