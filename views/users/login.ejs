<% layout('layouts/boilerplate')%>

<section class="login-section">
    <div class="container-fluid login">
        <div class="user singinBx">
            <div class="imgBx">
                <img src="https://images.unsplash.com/photo-1513415564515-763d91423bdd?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=675&q=80" alt="1">
            </div>
            <div class="formBx">
                <form action="/login" method="POST" novalidate>
                    <header><span class="fa fa-users"></span></header>
                    <input type="text" name="username" placeholder="Username" autofocus required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <input type="password" name="password" placeholder="Password" required> 
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <button>Sign In</button>
                    <p class="forgot"><a href="/forgot">Forgot your password</a></p>
                    <p class="signup">Don't have an account ? <a href="/register">Sign Up.</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
